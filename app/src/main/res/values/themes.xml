<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalisthenicsWorkout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/WhiteBackGround</item>
        <item name="materialButtonStyle">@style/MyButton</item>
        <item name="drawerArrowStyle">@style/MyArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Icon</item>


    </style>

    <style name="WhiteBackGround">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/aclonica</item>
    </style>



    <style name="Theme.CalisthenicsWorkout.Timer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Theme.CalisthenicsWorkout.Video" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="NavigationView.Menu" parent="android:Widget.TextView">
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationView.Item" parent="android:Widget.TextView">
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButton" >
        <item name="backgroundTint">@color/border</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="outside">
        <item name="android:background">@drawable/constraint_layout_style</item>
    </style>

    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>




    <style name="ActionButton.Overflow.Icon" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_more</item>
    </style>



</resources>